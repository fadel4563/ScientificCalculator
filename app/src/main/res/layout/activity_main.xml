<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/previCal"
            android:layout_marginTop="5dp"
            android:textAlignment="textEnd"
            android:textSize="29sp"
            android:textColor="@color/white"
            android:textStyle="bold|normal"
            android:background="#00000000"
            android:maxLines="1"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>
        <EditText
            android:id="@+id/display"
            android:textAlignment="textEnd"
            android:textSize="45sp"
            android:hint="0"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textStyle="bold|normal"
            android:background="#00000000"
            android:maxLines="1"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="65dp"/>
    </LinearLayout>
    <View
        android:alpha=".5"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:onClick="rotateBtn"
            app:icon="@drawable/ic_rotation"
            app:iconSize="18dp"
            app:shapeAppearanceOverlay="@style/Button8"
            app:backgroundTint="@color/blacks"
            android:layout_marginEnd="5dp"
            app:iconPadding="0dp" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            app:iconSize="20dp"
            android:onClick="backSpaceBtn"
            app:icon="@android:drawable/ic_input_delete"
            app:shapeAppearanceOverlay="@style/Button8"
            app:backgroundTint="@color/blacks"
            android:layout_marginEnd="5dp"
            app:iconPadding="0dp" />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="clearBtn"
                    android:padding="2dp"
                    android:text="@string/clearText"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/red"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn01"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="parOpenBtn"
                    android:padding="2dp"
                    android:text="@string/parenthesesOpenText"
                    android:textColor="@color/yellows"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn03"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="parcloseBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/parenthesesCloseText"
                    android:textColor="@color/yellows"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="divideBtn"
                    android:padding="2dp"
                    android:text="@string/divideText"
                    android:textColor="@color/yellows"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="sevenBtn"
                    android:padding="2dp"
                    android:text="@string/sevenText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn001"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="eightBtn"
                    android:padding="2dp"
                    android:text="@string/eightText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn003"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="nineBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/nineText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:onClick="multiplyBtn"
                    android:padding="2dp"
                    android:text="@string/multiplyText"
                    android:textColor="@color/yellows"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn012"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="foureBtn"
                    android:padding="2dp"
                    android:text="@string/fourText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn0011"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="fiveBtn"
                    android:padding="2dp"
                    android:text="@string/fiveText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="sixBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/sixText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnDivides"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="subtractBtn"
                    android:padding="2dp"
                    android:text="@string/subtractText"
                    android:textColor="@color/yellows"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn032"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="oneBtn"
                    android:padding="2dp"
                    android:text="@string/oneText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn021"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="twoBtn"
                    android:padding="2dp"
                    android:text="@string/twoText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btn031"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="threeBtn"
                    android:paddingStart="1dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="8dp"
                    android:text="@string/threeText"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    android:id="@+id/btnDividess"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:layout_span="1"
                    android:elevation="15dp"
                    android:onClick="addBtn"
                    android:padding="2dp"
                    android:text="@string/addText"
                    android:textColor="@color/yellows"
                    android:textSize="19sp"
                    android:textStyle="bold|normal"
                    app:backgroundTint="@color/blacks"
                    app:shapeAppearanceOverlay="@style/Button8" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <Button
                    android:id="@+id/btn025"
                    android:text="@string/zeroText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="2"
                    android:onClick="zeroBtn"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:shapeAppearanceOverlay="@style/Button8"
                    android:elevation="15dp"
                    />
                <Button
                    android:id="@+id/btn036"
                    android:text="@string/decimalText"
                    android:textSize="19sp"
                    android:paddingTop="8dp"
                    android:onClick="decimalBtn"
                    android:paddingBottom="8dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:layout_span="1"
                    android:layout_gravity="center"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:shapeAppearanceOverlay="@style/Button8"
                    android:elevation="15dp"
                    />
                <Button
                    android:id="@+id/btnDiv"
                    android:text="@string/equalsText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:onClick="equalsBtn"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="15dp"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
            </TableRow>

        </TableLayout>



    </LinearLayout>

</LinearLayout>